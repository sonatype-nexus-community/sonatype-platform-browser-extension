{
  "branches": [
    "main"
  ],
  "plugins": [
    "@semantic-release/commit-analyzer", 
    "@semantic-release/release-notes-generator", 
    [
      "@semantic-release/changelog",
      {
        "changelogFile": "CHANGELOG.md"
      }
    ],
    ["semantic-release-chrome", {
      "extensionId": "kahnhlonadjlllgnilndafpajaiepdag",
      "asset": "sonatype-platform-browser-extension.zip",
      "distFolder": "build"
    }],
    ["@semantic-release/exec", {
      "verifyConditionsCmd": "node ./scripts/scripts/edge-webstore.js verify",
      "publishCmd": "node ./scripts/scripts/edge-webstore.js publish"
    }],
    ["@semantic-release/github", {
      "assets": "build/*.tgz"
    }],
    ["@semantic-release/git", {
        "assets": ["CHANGELOG.md", "package.json"]
    }]
  ]
}
